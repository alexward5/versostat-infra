{
    "name": "versostat-infra",
    "version": "0.1.0",
    "bin": {
        "versostat-infra": "bin/versostat-infra.ts"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest",
        "cdk": "cdk",
        "synth": "cdk synth",
        "deploy:db": "cdk deploy VersoStat-DatabaseStack-prod",
        "deploy:net": "cdk deploy VersoStat-NetworkStack-prod",
        "deploy:access": "cdk deploy VersoStat-AccessStack-prod",
        "deploy:api": "cdk deploy VersoStat-ApiPlatformStack-prod",
        "destroy:db": "cdk destroy VersoStat-DatabaseStack-prod",
        "destroy:net": "cdk destroy VersoStat-NetworkStack-prod",
        "destroy:access": "cdk destroy VersoStat-AccessStack-prod",
        "destroy:api": "cdk destroy VersoStat-ApiPlatformStack-prod",
        "db:tunnel": "ts-node scripts/db-tunnel.ts --region us-east-1 --access-stack VersoStat-AccessStack-prod --db-stack VersoStat-DatabaseStack-prod --local-port 5439"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "22.7.9",
        "aws-cdk": "2.1025.0",
        "eslint": "^9.33.0",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.6.3"
    },
    "dependencies": {
        "@aws-sdk/client-cloudformation": "^3.864.0",
        "aws-cdk-lib": "2.208.0",
        "constructs": "^10.0.0"
    }
}
